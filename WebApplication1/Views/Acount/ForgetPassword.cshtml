@model ForgetPasswordVM
@{
   ViewBag.Title = "Code Kids";
    Layout = "~/Views/Layout/SecondLayout.cshtml";
}


<div id="forgett" class="forget pt-5 pb-5 d-flex justify-content-center ">

    <div class="col-5">
            <div class=" card border-0  ">
        <div class="card-header bg-secondary text-center p-4">
            <h1 class="text-white m-0">ForgetPassword</h1>
        </div>
        <div class="card-body rounded-bottom bg-primary p-5">
      <form asp-controller="Account" asp-action="ForgetPassword">

                    <div asp-validation-summary="All" class="text-danger "></div>
                    <div class="text-light msg text-center mb-3">
                        Enter your email address that you used to register.
                        <br />
                        We'll send you an email with your username and a
                        link to reset your password.
                    </div>
                    <div class="form-group">
                        <div class="form-group text-light fs-3">
                            <label for="exampleInputEmail1">Email </label>
                            <input type="email" name="email" asp-for="Email" class="form-control is-invalid" id="exampleInputEmail1" placeholder="Enter  your email" aria-describedby="exampleInputEmail1-error" aria-invalid="true">
                            <span id="exampleInputEmail1-error" asp-validation-for="Email" class="error invalid-feedback">Please enter a email address</span>
                        </div>
                    </div>
                    <!--asp-for="Email"   asp-validation-for="Email"-->
                    <input type="submit" value="RESET MY PASSWORD" class="btn btn-block btn-lg bg-pink waves-effect text-light" />

                    <div class=" text-center align-center  ">
                            <a id="txt" class="text-muted text-dark " asp-controller="Acount" asp-action="Login">Login!</a>
                    </div>
                </form>
       </div>
       </div>
       </div>
      </div>

 <script src="~/plugins/jquery/jquery.min.js"></script>
  <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
 <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
