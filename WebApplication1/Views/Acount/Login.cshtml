@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Layout/SecondLayout.cshtml";
}

<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <h1 class="mb-4">
                    Welcome !
                    <br>
                    Let’s get coding
                </h1>
                <img class="list-inline m-0" src="~/img/TechTalk.jpg">
            </div>
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Login</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form asp-controller="Acount" asp-action="Login">  
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" name="email" asp-for="Email" class="form-control is-invalid" id="exampleInputEmail1" placeholder="Enter  your email" aria-describedby="exampleInputEmail1-error" aria-invalid="true">
                                    <span id="exampleInputEmail1-error" asp-validation-for="Email" class="error invalid-feedback">Please enter a email address</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" name="password" asp-for="Password"class="form-control is-invalid" id="exampleInputPassword1" placeholder="Password" aria-describedby="exampleInputPassword1-error" aria-invalid="true">
                                    <span id="exampleInputPassword1-error"  asp-validation-for="Password"   class="error invalid-feedback">Please provide a password</span>
                                </div>
                            </div>

                            


                            <div class="form-group">
                                <select class="custom-select border-0 px-4"
                                        style="height: 47px">
                                    <option selected>Select  User Type</option>
                                    <option value="1">Student</option>
                                    <option value="2">teacher</option>
                                    <option value="3">Parent</option>
                                </select>
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit">
                                    Login
                                </button>
                                <p><a id="10" class="text-muted" asp-controller="Acount" asp-action="ForgetPassword">Forgot password?</a></p>
                                <p>Don't have an account? <a class="text-muted" asp-controller="Acount" asp-action="Registration">Register here</a></p>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
     <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
