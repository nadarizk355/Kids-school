
@{
    ViewBag.Title = "RegistrationParent";
    Layout = "~/Views/Layout/SecondLayout.cshtml";
}

<h1 class="pt-5 pb-3 text-center">
    Parent’ Registration
</h1>
<h5 class=" pb-1 fs-1 text-center">You will have immediate access to CodeKids courses</h5>

<div class="d-flex justify-content-center" >
<div class="col-lg-5 ">
    <div class="card border-0">
        <div class="card-header bg-secondary text-center p-4">
            <h1 class="text-white m-0">Sing Up</h1>
        </div>
        <div class="card-body rounded-bottom bg-primary p-5">


                <form asp-controller="Acount" asp-action="RegisterationParent">
                    <div class="form-group">
                        <div class="form-group text-light fs-3">
                            <label for="exampleInputUserName">UserName</label>
                            <input type="text" name="Username" class="form-control is-invalid" id="exampleInputUserNamel1" placeholder="Enter  your UserName" aria-describedby="exampleInputUserName1-error" aria-invalid="true">
                            <span id="exampleInputUserName-error" class="error invalid-feedback">Please enter a UserName </span>
                        </div>

                    </div>

                    <div class="form-group">
                                <div class="form-group text-light fs-3">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" name="email" class="form-control is-invalid" id="exampleInputEmail1" placeholder="Enter  your email" aria-describedby="exampleInputEmail1-error" aria-invalid="true">
                                    <span id="exampleInputEmail1-error"  class="error invalid-feedback">Please enter a email address</span>
                                </div>
                            </div>

                    <div class="form-group">
                        <div class="form-group text-light">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" name="password" class="form-control is-invalid" id="exampleInputPassword1" placeholder="Password" aria-describedby="exampleInputPassword1-error" aria-invalid="true">
                            <span id="exampleInputPassword1-error" class="error invalid-feedback">Please provide a password</span>
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <div class="form-group text-light">
                            <label for="exampleInputid">Kid Id</label>
                            <input type="number" name="id" class="form-control is-invalid" id="exampleInputid" placeholder="id" aria-describedby="exampleInputid-error" aria-invalid="true">
                            <span id="exampleInputid-error" class="error invalid-feedback">Please enter a id kid</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <select class="custom-select border-0 px-4 mb-5"
                                style="height: 47px">
                            <option selected>Select Gender </option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>

                        </select>
                    </div>


                    <button class="btn btn-secondary btn-block border-0 py-3 mt-4 mb-4"
                            type="submit">
                       Submit
                    </button>


                    <p class="text-light fs-3">You already have a membership? <a id="txt" class="text-muted text-light" asp-controller="Acount" asp-action="Login">Login</a></p>

                </form>


            </div>
    </div>
</div>
</div>
<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery-validation/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
